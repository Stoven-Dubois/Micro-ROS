#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <sys/types.h>
#include <sys/stat.h>
#include <fcntl.h>
#include <assert.h>
#include <errno.h>
#include <unistd.h>

#ifndef STRUCTURE_H
#define STRUCTURE_H

typedef struct node{
	char* nom;
	int nbPortIn;
	int nbPortOut;
	char** portIn;
	char** portOut;
	}Node;
	
typedef struct fifo{
	char* nom;
	int fd;
	}Fifo;

typedef struct arg{
	char* buff;
	int fd;	
	FILE* log;
	int test;
}Arg;

typedef struct cfg{
	char* noeud;
	char* bin;
	char* publish;
	char* listen;
	char* args;
}Cfg;

typedef struct veriFifo{
	char* nom;
	int mode;// = 0 si le fifo est en listen, 1 si publish
	int verifie; //verifie est egal a 1 si le fifo a une entr√©e et une sortie, 0 sinon
}VeriFifo;

#endif /* STRUCTURE_H */


